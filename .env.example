DATABASE_URL="postgresql://wallet_user:wallet_pass@localhost:5432/wallet_db?connection_limit=20&pool_timeout=20"
NODE_ENV="development"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_GENERAL_MAX=100
RATE_LIMIT_TRANSACTION_MAX=20
RATE_LIMIT_BALANCE_MAX=50
RATE_LIMIT_STRICT_MAX=10
RATE_LIMIT_RETRY_AFTER=60

# Transaction Limits
MAX_TOPUP_AMOUNT=10000
MAX_SPEND_AMOUNT=5000
MAX_DAILY_SPEND=20000
MAX_MONTHLY_SPEND=100000

# Validation
MAX_DECIMAL_PLACES=2
MAX_STRING_LENGTH=255
IDEMPOTENCY_KEY_MIN_LENGTH=1
IDEMPOTENCY_KEY_MAX_LENGTH=255

# Retry Logic
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY_MS=100
RETRY_MAX_DELAY_MS=5000
RETRY_BACKOFF_MULTIPLIER=2

# Metrics
METRICS_DEFAULT_WINDOW_MINUTES=5
